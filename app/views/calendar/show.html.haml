.page-header
  %h1
    Calendar
    %small sibext.com
  .row
    .col-md-12.text-center
      .well.controls
        .container
          .row.row-centered
            .col-xs-6.col-centered
              = link_to calendar_path(date: @date - 1.year), class: "btn btn-default" do
                %i.glyphicon.glyphicon-backward
              = "#{@date.year}"
              = link_to calendar_path(date: @date + 1.year), class: "btn btn-default" do
                %i.glyphicon.glyphicon-forward
            .col-xs-6.col-centered
              = link_to calendar_path(date: @date - 1.month), class: "btn btn-default" do
                %i.glyphicon.glyphicon-backward
              = "#{@date.strftime("%B")} "
              = link_to calendar_path(date: @date + 1.month), class: "btn btn-default" do
                %i.glyphicon.glyphicon-forward
  .row
    .col-md-12
      = calendar @date do |date|
        
