<h1>Listing events</h1>

<div class="bs-example">
    <table class="table">
      <thead>
        <tr>
          <th>title</th>
          <th>place</th>
          <th>start date</th>
          <th>end date</th>
          <th>create date</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
            <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.place %></td>
        <td><%= event.startdate %></td>
        <td><%= event.enddate %></td>
        <td><%= event.createtime %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

      </tbody>
    </table>
  </div>



<br>

      <%= link_to 'New event' , new_event_path(date: @date)%>

