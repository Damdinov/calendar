= form_for(@event) do |f|
  - if @event.errors.any?
    #error_explanation
      %h2
        = pluralize(@event.errors.count, "error")
        prohibited this event from being saved:
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :place
    %br/
    = f.text_field :place
  .field
    = f.label :startdate
    %br/
    = f.datetime_select :startdate
  .field
    = f.label :enddate
    %br/
    = f.datetime_select :enddate
  .field
    = f.label :createtime
    %br/
    = f.datetime_select :createtime
  .actions
    = f.submit
